<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PortableControl" parent="Theme.Design.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowFullscreen">true</item>

        <item name="android:windowActivityTransitions">true</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/animation_translucent_translate</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="animation_translucent_translate" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/in</item>
        <item name="android:windowExitAnimation">@anim/out</item>
    </style>

    <style name="Theme.PortableControl" parent="Base.Theme.PortableControl" />
</resources>